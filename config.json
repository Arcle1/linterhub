{
    /* Linters */
    "linters": [
        {
            "name": "deptrac",
            "description": "Deptrac is a static code analysis tool that helps to enforce rules for dependencies between software layers.",
            "url": "https://github.com/sensiolabs-de/deptrac",
            "languages": ["php"],
            "license": "MIT",
            "platform": "php",
            "config": {
                "package": "sensiolabs-de/deptrac:dev-master"
            }
        },
        {
            "name": "parse",
            "description": "The Parse scanner is a static scanning tool to review your PHP code for potential security-related issues.",
            "url": "https://github.com/psecio/parse",
            "languages": ["php"],
            "license": "MIT",
            "platform": "php",
            "config": {
                "package": "psecio/parse"
            }
        },
        {
            "name": "phan",
            "description": "Phan is a static analyzer that looks for common issues and will verify type compatibility on various operations when type information is available or can be deduced.",
            "url": "https://github.com/etsy/phan",
            "languages": ["php"],
            "license": "MIT",
            "platform": "php",
            "config": {
                "package": "etsy/phan:dev-master"
            }
        },
        {
            "name": "php-assumptions",
            "description": "PHP Assumptions is a static code analysis tool doing checks for weak assumptions.",
            "url": "https://github.com/rskuipers/php-assumptions",
            "languages": ["php"],
            "license": "MIT",
            "platform": "php",
            "config": {
                "package": "rskuipers/php-assumptions"
            }
        },
        {
            "name": "phpcheckstyle",
            "description": "PHPCheckstyle is an open-source tool that helps PHP programmers adhere to certain coding conventions.",
            "url": "https://phpcheckstyle.github.io",
            "languages": ["php"],
            "license": "OSL-2.1",
            "platform": "php",
            "config": {
                "package": "phpcheckstyle/phpcheckstyle"
            }
        },
        {
            "name": "phpcodefixer",
            "description": "PhpCodeFixer finds usage of deprecated functions, variables and ini directives in your php code.",
            "url": "https://github.com/wapmorgan/PhpCodeFixer",
            "languages": ["php"],
            "license": "BSD-3-Clause",
            "platform": "php",
            "config": {
                "package": "wapmorgan/php-code-fixer"
            }
        },
        {
            "name": "phplint",
            "description": "PHPLint is a validator and documentator for PHP 5 and PHP 7 programs.",
            "url": "http://www.icosaedro.it/phplint/",
            "languages": ["php"],
            "license": "BSD-3-Clause",
            "platform": "TODO"
        },
        {
            "name": "phpsa",
            "description": "PHPSA is a development tool aimed at bringing static analysis for PHP applications and libraries.",
            "url": "https://phpsa.dmtry.me",
            "languages": ["php"],
            "license": "MIT",
            "platform": "php",
            "config": {
                "package": "ovr/phpsa"
            }
        },
        {
            "name": "phpmd",
            "description": "It takes a given PHP source code base and look for several potential problems within that source.",
            "url": "https://phpmd.org",
            "languages": ["php"],
            "license": "BSD-3-Clause",
            "platform": "php",
            "config": {
                "package": "phpmd/phpmd"
            }
        },
        {
            "name": "phpmetrics",
            "description": "PhpMetrics provides various metrics about PHP projects.",
            "url": "http://phpmetrics.org",
            "languages": ["php"],
            "license": "MIT",
            "platform": "php",
            "config": {
                "package": "phpmetrics/phpmetrics"
            }
        },
        {
            "name": "php_codesniffer",
            "description": "PHP_CodeSniffer tokenizes PHP, JavaScript and CSS files to detect and fix violations of a defined set of coding standards.",
            "url": "https://github.com/squizlabs/PHP_CodeSniffer",
            "languages": ["php"],
            "license": "BSD-3-Clause",
            "platform": "php",
            "config": {
                "package": "squizlabs/php_codesniffer=*"
            }
        }
    ],
    /* Development platforms */
    "platforms": {
        "custom": "",
        "go": "",
        "nodejs": "npm install -g",
        "php": "composer global require",
        "python" : "pip install",
        "ruby": "gem install"
    },
    /* Docker images */
    "dockers": {
        "alpine": {
            "TODO": "",
            "base": "alpine",
            "go": "golang:alpine",
            "java": "openjdk:8-alpine",
            "nodejs": "mhart/alpine-node",
            "php": "composer/composer:alpine",
            "python" : "python:3-alpine",
            "ruby": "cybercode/alpine-ruby:2.3"
        }
    }
}